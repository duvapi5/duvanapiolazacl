---
const whatsappNumber = "56942183179";
const whatsappMessage = encodeURIComponent("Hola Duván, me gustaría conversar sobre un proyecto.");
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

const techBadges = ['Desarrollo Web', 'Automatización', 'Consultoría TI'];
---

<section class="min-h-screen flex items-center relative overflow-hidden bg-slate-950 text-white" id="hero">
  <!-- Animated gradient background (mouse-follow) -->
  <div id="hero-gradient" class="absolute inset-0 opacity-30 transition-all duration-1000 ease-out"
    style="background: radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.15) 0%, transparent 50%);">
  </div>
  
  <!-- Grid pattern overlay -->
  <div 
    class="absolute inset-0 opacity-[0.03]"
    style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;">
  </div>

  <!-- Floating orbs -->
  <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-emerald-500/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  
  <div class="max-w-6xl mx-auto px-6 py-20 relative z-10">
    <!-- Status badge -->
    <div class="flex justify-center mb-10 animate-fade-in-up" style="animation-delay: 100ms;">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-emerald-500/10 border border-emerald-500/20 backdrop-blur-sm">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
        </span>
        <span class="text-xs text-emerald-400 font-medium uppercase tracking-wider">Agenda abierta</span>
      </div>
    </div>

    <!-- Main content - Centered -->
    <div class="text-center max-w-4xl mx-auto">
      <!-- Photo with glow effect -->
      <div class="relative inline-block mb-6 md:mb-8 group animate-scale-in" style="animation-delay: 200ms;">
        <div class="absolute -inset-1.5 bg-gradient-to-r from-emerald-500 via-cyan-500 to-emerald-500 rounded-full blur-md opacity-50 group-hover:opacity-75 transition-opacity duration-500 animate-gradient-x"></div>
        <div class="relative w-32 h-32 sm:w-36 sm:h-36 md:w-44 md:h-44 rounded-full overflow-hidden ring-4 ring-slate-900">
          <img 
            src="/yop.jpg"
            alt="Duván Apiolaza"
            class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
            loading="eager"
          />
        </div>
      </div>

      <!-- Name and title -->
      <div class="mb-6 animate-fade-in-up" style="animation-delay: 300ms;">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="h-px w-8 bg-emerald-500"></span>
          <span class="text-sm text-emerald-400 font-medium uppercase tracking-widest">Hola, soy</span>
          <span class="h-px w-8 bg-emerald-500"></span>
        </div>
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 bg-gradient-to-r from-white via-slate-200 to-slate-400 bg-clip-text text-transparent">
          Duván Apiolaza
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-emerald-400 font-semibold">
          Ingeniero en Informática
        </p>
      </div>

      <!-- Value proposition -->
      <div class="animate-fade-in-up" style="animation-delay: 400ms;">
        <p class="text-base sm:text-lg md:text-xl text-slate-300 mb-3 max-w-2xl mx-auto px-2 leading-relaxed">
          Lo que puedas imaginar, <span class="text-white font-medium">lo creamos.</span>
        </p>
        <p class="text-sm sm:text-base md:text-lg text-slate-500 mb-8 max-w-2xl mx-auto px-2">
          Tecnología clara, mantenible y enfocada en resultados.
        </p>
      </div>

      <!-- Tech stack badges -->
      <div class="flex flex-wrap justify-center gap-2 sm:gap-3 mb-8 sm:mb-10 animate-fade-in-up" style="animation-delay: 500ms;">
        {techBadges.map((tech) => (
          <span class="px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm font-medium bg-slate-800/50 text-slate-300 rounded-lg border border-slate-700/50 backdrop-blur-sm hover:border-emerald-500/50 hover:text-emerald-400 transition-all duration-300 cursor-default">
            {tech}
          </span>
        ))}
      </div>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4 mb-10 sm:mb-12 px-4 sm:px-0 animate-fade-in-up" style="animation-delay: 600ms;">
        <button
          id="btn-ver-trabajo"
          class="group relative inline-flex items-center justify-center gap-2 bg-emerald-500 hover:bg-emerald-400 text-white font-semibold px-6 sm:px-8 py-3.5 sm:py-4 rounded-xl transition-all duration-300 hover:shadow-lg hover:shadow-emerald-500/25 hover:-translate-y-0.5"
        >
          <span>Ver mi trabajo</span>
          <svg class="w-5 h-5 transform group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="group inline-flex items-center justify-center gap-2 bg-slate-800/50 hover:bg-slate-800 border border-slate-700 hover:border-emerald-500/50 text-white font-semibold px-6 sm:px-8 py-3.5 sm:py-4 rounded-xl transition-all duration-300 backdrop-blur-sm hover:-translate-y-0.5"
        >
          <svg class="w-5 h-5 text-green-500 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>Hablemos</span>
        </a>
      </div>

      <!-- Location -->
      <div class="flex items-center justify-center gap-2 text-slate-500 animate-fade-in" style="animation-delay: 700ms;">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span class="text-sm">Rengo, Chile · Remoto & Presencial</span>
      </div>
    </div>

    <!-- Social links - bottom center -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex items-center gap-5 animate-fade-in" style="animation-delay: 800ms;">
      <a href="https://instagram.com/duvanapiolaza.cl" target="_blank" rel="noopener noreferrer"
        class="text-slate-500 hover:text-pink-400 transition-colors duration-300">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
        </svg>
      </a>
      <a href="https://www.linkedin.com/in/duvan-apiolaza/" target="_blank" rel="noopener noreferrer"
        class="text-slate-500 hover:text-blue-400 transition-colors duration-300">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
      <a href="https://github.com/duvapi5" target="_blank" rel="noopener noreferrer"
        class="text-slate-500 hover:text-white transition-colors duration-300">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Mouse-follow gradient effect
  const heroGradient = document.getElementById('hero-gradient');
  if (heroGradient) {
    window.addEventListener('mousemove', (e) => {
      const x = (e.clientX / window.innerWidth) * 100;
      const y = (e.clientY / window.innerHeight) * 100;
      heroGradient.style.background = `radial-gradient(circle at ${x}% ${y}%, rgba(16, 185, 129, 0.15) 0%, transparent 50%)`;
    });
  }

  // Scroll to projects
  const btnVerTrabajo = document.getElementById('btn-ver-trabajo');
  if (btnVerTrabajo) {
    btnVerTrabajo.addEventListener('click', () => {
      const element = document.getElementById('proyectos');
      element?.scrollIntoView({ behavior: 'smooth' });
    });
  }
</script>
